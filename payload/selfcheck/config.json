{
  "options": {
    "log-level": 3,
    "pkg-filter": "ar-go-tools",
    "max-alarms": 2,
    "unsafe-max-depth": 6,
    "max-entrypoint-context-size": 2,
    "summarize-on-demand": true,
    "report-paths": true,
    "reports-dir": "payload/selfcheck/taint-report"
  },
  "dataflow-specs": [
    "argot-specs.json",
    "std-specs.json"
  ],
  "taint-tracking-problems": [
    {
      "sources": [
        {
          "package": "ssa",
          "context": "ar-go-tools",
          "method": "String"
        }
      ],
      "sinks": [
        {
          "context": "ar-go-tools/analysis",
          "package": "fmt",
          "value-match": ".*%s.*",
          "method": "((Printf)|(Fprintf))"
        },
        {
          "package": "config",
          "value-match": ".*%s.*",
          "method": "((Warnf)|(Debugf)|(Infof)|(Errorf))"
        }
      ],
      "sanitizers": [
        {
          "package": "formatutil",
          "method": "Sanitize"
        }
      ],
      "filters": [
        {
          "type": "LogGroup"
        },
        {
          "type": "^int$"
        },
        {
          "type": "^bool$"
        },
        {
          "type": "^float"
        }
      ]
    }
  ]
}